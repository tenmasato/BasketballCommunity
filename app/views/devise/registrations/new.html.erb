<div class = "container px-5 px-sm-0">
  <div class = "row mt-5 mb-5">
    <div class = "col">
      <h2>新規登録</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class = "name-group">
        <%= f.label :"名前" %><br/>
        <%= f.label :last_name, "(性)", required: true, %>
        <%= f.text_field :last_name, autofocus: true %>
        <%= f.label :first_name, "(名)", required: true, %>
        <%= f.text_field :first_name %>
      </div>

      <div class = "name-group">
        <%= f.label :"フリガナ" %><br/>
        <%= f.label :last_name_kana,"セイ" %>
        <%= f.text_field :last_name_kana, autofocus: true %>
        <%= f.label :first_name,"(名)" %>
        <%= f.text_field :first_name_kana %>
      </div>

      <div class="form-group mt-3">
        <%= f.label :email, "メールアドレス" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-group">
        <%= f.label :password,"パスワード" %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation,"パスワード(確認用)" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions mb-4">
        <%= f.submit "新規登録",class: "btn btn-secondary btn-secondary-simple" %>
      </div>
      <% end %>

      <h5>既に登録済みの方</h5>
      <p><%= render "devise/shared/links" %>からログインしてください</p>
      </div>
    </div>
</div>
