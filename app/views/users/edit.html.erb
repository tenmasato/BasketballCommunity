<div classs = "container">
  <%= render 'layouts/errors', obj: @user %>
  <div class = "row no-gutters">
    <div class = "col-md-7 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class = "text-dark bg-lignt p4 mb-0">プロフィール編集</h5>
      <div class = "form-body p-4">
        <%= form_with model:@user, local:true do |f| %>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></br>
        <label for="inputImage">ProfileImage</label>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        <div class = "field mt-4">
          <label for="inputName">Name</label>
          <%= f.text_field :last_name, autofocus: true, id:"inputName", placeholder:"性"%>
          <%= f.text_field :first_name, autofocus: true, id:"inputName", placeholder:"名前"%>
        </div>
        <div class = "actions">
          <%= f.submit '保存',class: "btn btn-info mt-3" %>
        </div>
        <%= link_to "キャンセル",user_path(current_user.id),class: "text-danger"%>
        <%end%>
      </div>
    </div>
  </div>
</div>