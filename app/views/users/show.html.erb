<div class = "container">
    <div class = "contents-title text-center col-12">
      <h3>マイページ</h3>
      <%= @user.name %>
      <%= render 'relationships/follow_list'%>
      <% if current_user != @user %>
      <% if current_user.following?(@user) %>
      <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-info" %>
      <% else %>
      <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-success" %>
      <% end %>
      <% end %>
      <div class = "row">
          <% @tweets.each do |tweet| %>
          <div class ="card" style="width: 16rem;">
            <div class = "card-header">
              <%= tweet.user.name %>
              <!-- この要素をクリックするとモーダルが出現します -->
              <div class = "text-right" data-toggle="modal" data-target="#exampleModal">
                <i class = "fas fa-align-justify horber"></i>
                </div>
                <!-- モーダルの設定 -->
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h4 class="modal-title mx-auto" id="exampleModalLabel">投稿を編集</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                        </div>
                        <div class="modal-body">
                          <span class = "danger-font">
                            <% if tweet.user == current_user %>
                            <%= link_to "削除",tweet_path(tweet),method: :delete %>
                            <%end%>
                          </span>
                        </div>
                        <div class = "modal-body">
                          <span class = "link-font"><%= link_to "編集",edit_tweet_path(tweet.id) %></span>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                          <button type="button" class="btn btn-primary">Save changes</button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              <%= attachment_image_tag tweet,:image,:fill, 250,250,class: "card-img-top"; %>
              <div class = "card-body">
                <div class = "row">
                <div class = "col-2">
                   <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
                </div>
                <div class = "col-12">
                <p class = "card-text">caption：<%= tweet.caption %></p>
                <p = "card-time">投稿日時:<%= tweet.created_at.strftime('%Y/%m/%d')%></p>
                <p>
                  <%= render 'favorites/favorite', tweet: tweet%> |
                  <%= link_to tweet_path(tweet) do %>
                  <i class = "far fa-comment fa-flip-horizontal"></i>コメント件数:<%= tweet.tweet_comments.count %>
                  <%end%>
                </p>
                </div>
              </div>
             </div>
          </div>
        <%end%>
      </div>
    </div>
  </div>

