<div class = "texts-wrapper">
    <div class = "contents-title text-center">
      <h3>タイトル</h3>
      <div class = "row">
          <% @tweets.each do |tweet| %>
          <div class ="card" style="width: 20rem;">
              <%= attachment_image_tag tweet,:image,class: "card-img-top"; %>
              <div class = "card-body">
                <div class = "row">
                <div class = "col-2">
                   <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class:"mt-3 rounded-circle"; %>
                </div>
                <div class = "col-12">
                <p class = "card-text">caption：<%= tweet.caption %></p>
                <p = "card-time">投稿日時:<%= tweet.created_at.strftime('%Y/%m/%d')%></p>
                <span><%= render 'favorites/favorite', tweet: tweet%></span>
                </div>
                </div>
              </div>
             </div>
          </div>
        <%end%>
      </div>
    </div>
  </div>
