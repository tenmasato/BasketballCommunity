<div class = "container mt-5">
  <h2 class = "text-center"><%= @map.name %><%= render 'bookmarks/bookmark',map: @map%></h2>
  <div class = "row">
    <table class = "table table-bordered">
        <tr>
          <th class = "bg-danger">コート名</th>
          <td><%= @map.name %></td>
        </tr>
        <tr>
          <th class = "bg-danger">詳細</th>
          <td><%= @map.caption %></td>
        </tr>
        <tr>
          <th class = "bg-danger">住所</th>
          <td><%= @map.address %></td>
        </tr>
    </table>
  </div>
  <div class = "row">
    <div class = "col-6">
      <%= render 'counts/count',map: @map%>
      <table>
  <thead>
    <tr>
      <th>プレイヤー</th>
    </tr>
  </thead>
  <tbody>
    <% @counts.each do |count| %>
      <tr>
        <td><%= count.user.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    </div>
    <div class = "col-6">
      <%= render 'map_comments/comment' %>
      <%= form_with model:[@map,@map_comment] do |f| %>
      <%= f.text_area :comment, class: "form-control",width: 200, placeholder: "コメントをここに" %>
      <%= f.submit '送信', class: "btn btn-sm  btn-info mt-3"%>
      <%end%>
    </div>
  </div>
</div>