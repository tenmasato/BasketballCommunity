<div class="notice"><%= notice %></div>
<div class = "container mt-5">
  <h2 class = "text-center">
    <%= @map.name %>
    <span id = "bookmark_buttons_<%= @map.id%>">
      <%= render 'bookmarks/bookmark',map: @map%>
    </span>
  </h2>
  <div class = "row">
    <table class = "table table-bordered">
        <tr>
          <th class = "bg-danger">コート名</th>
          <td><%= @map.name %></td>
        </tr>
        <tr>
          <th class = "bg-danger">詳細</th>
          <td><%= @map.caption %></td>
        </tr>
        <tr>
          <th class = "bg-danger">住所</th>
          <td><%= @map.address %></td>
        </tr>
    </table>
  </div>
  <div class = "row">
    <div class = "col-6">
      <%= render 'counts/count',map: @map%>
    </div>
    <div class = "col-6">
      <%= render 'map_comments/comment' %>
    </div>
  </div>
</div>